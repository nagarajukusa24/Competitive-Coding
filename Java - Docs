##Naming Conventions####
	packages ==> lower
	objects  ==> Upper case start
	interfaces=> Upper casestart
	methods  ==> second char uppercase
	vars     ==> second char uppercase
	constants==> Caps
	keyword  ==> de-caps

###Classes:
	classname objectname = new classname();
	classname.methodname(); ==> For static methods, Object creation is not needed;

###Manual Input
	InputStreamReader obj = new InputStreamReader(System.in);
	BufferedReader br = new BufferedReader(obj);

	BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

	#char input
		char ch = br.read();
		char ch = (char)br.read();

	#String Input
		String str = br.readLine()

	#Type Conversions::
		int n = Integer.parseInt(str);
		float n = Float.parseFloat(br.readLine());
		double n = Double.parseDouble(br.readLine());
		byte n = Byte.parseByte(br.readLine());
		short n = Short.parseShort(br.readLine());
		long n = Long.parseLong(br.readLine());
		boolean x = Boolean.parseBoolean(br.readLine());

###Operations::
	str.charAt(0); ==> Displays char at 0th index..!

	StringTokenizer st = new StringTokenizer(str," ");
	StringTokenizer st = new StringTokenizer(str,",");

	String s1 = st.nextToken();  ==> After tokens splitted, we assign
	s1 = s1.trim()  ==> Removes spaces before and after token..!

###Array Declarations::
	==>	int marks[];
		marks = new int[5];
	==> int marks[] = new int[5];

###Strings Declarations::
	==> String s = "naga";
	==> String s = new String("naga");
	==> char arr[] = {'a','b'};
		String s = new String(arr);

	==> String s1 = s.concat(s2);
	==> s1.toUpperCase() / s1.toLowerCase()
	==> str.split(" ")
	==> s1.equals(s2) ==> String equals

	==> StringBuffer sb = new StringBuffer();
		sb.append("Hello");
		sb.insert(0,"hello");
		int n = sb.indexOf("hello");
		sb.replace(0,2,"tee");
		sb.substring(0,3);

